    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^11.2.0",
    "@prisma/client": "^5.8.1",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
