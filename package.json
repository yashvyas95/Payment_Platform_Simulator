  "repository": {
    "type": "git",
    "url": "git+https://github.com/yashvyas95/Payment_Platform_Simulator.git"
  },
  "homepage": "https://github.com/yashvyas95/Payment_Platform_Simulator#readme",
  "bugs": {
    "url": "https://github.com/yashvyas95/Payment_Platform_Simulator/issues"
  },
