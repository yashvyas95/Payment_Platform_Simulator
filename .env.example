# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/payment_simulator

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@localhost:5672

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# Simulator Configuration
SIMULATOR_DEFAULT_DELAY_MS=1000
SIMULATOR_SUCCESS_RATE=0.85

# Email Configuration (Optional)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@payment-simulator.dev

# Webhook Configuration
WEBHOOK_RETRY_ATTEMPTS=5
WEBHOOK_RETRY_DELAY_MS=60000

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
API_KEY_PREFIX=sk_test_

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3001
